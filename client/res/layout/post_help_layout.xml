<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/helpTxt"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:ems="10"
        android:hint="@string/helpTxtHint">

        <requestFocus />
    </EditText>
    
    <RadioGroup
        android:id="@+id/radioOpts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/helpTxt">

	    <RadioButton
	        android:id="@+id/stuckWithCarRbtn"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:text="Stuck With my car"
	        android:checked="true"/>
	
	    <RadioButton
	        android:id="@+id/drunkCantDriveRbtn"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:text="Drunk and can't drive"/>
	
	    <RadioButton
	        android:id="@+id/needARideRbtn"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:text="Need a ride"/>
	    
	</RadioGroup>	    

    <Button
        android:id="@+id/submitBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:text="Submit" />

</RelativeLayout>